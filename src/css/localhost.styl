@import url('https://kit-free.fontawesome.com/releases/latest/css/free.min.css')

html {
  height: 100%;
}
body {
  height: 100%;
  min-height: 100%;
  background-color: #F1F4FA;
}

#app {
	padding: 5.69rem 0 1rem;
  background-color: #F1F4FA;
  margin-left: 320px;
  &.sidebar_closed {
    margin-left: 0;
  }
}

.aside {
  position: fixed;
  background-color: #fff;
  left: 0;
  top: 0;
  bottom: 0;
  padding-top: 1.75rem;
  width: 300px;
}
.sidebar_closed .aside {
  display: none;
}

.menu {
  & .list-group-item {
    border-right: none
  }
}
