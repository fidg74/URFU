.modal {
  background: rgba(0, 0, 0, .1);
  &-header {
    border: none;
    & .close {
      position: absolute;
      top: 0;
      right: -42px;
      float: none;
      padding: 0;
      margin: 0;
      width: 34px;
      height: 34px;
      opacity: 1;
      border-radius: 16px;
      line-height: 0;
      font-size: 0;
      text-align: center;
      vertical-align: middle;
      outline: none;
      color: #fff;
      background: rgba(17, 17, 18, .5);
      &:hover {
        background: rgba(0, 0, 0, 1);
      }
      &:before,
      &:after {
        position: absolute;
        left: 16px;
        top: 9px;
        content: ' ';
        height: 16px;
        width: 1px;
        background-color: #fff;
      }
      &:before {
        transform: rotate(45deg);
      }
      &:after {
        transform: rotate(-45deg);
      }
    }
  }
  &-title {
    font-size: 18px;
    line-height: 22px;
  }
  &-body {
    border: none;
  }
  & h2:first-child {
    margin-top: 0;
  }
  &-header + &-body {
    padding-top: 0;
  }
  &-footer {
    border: none;
    justify-content: flex-start;
    & .btn-primary {
      order: 1;
      margin-left: 0 !important;
    }
    & .btn-secondary {
      order: 2;
    }
  }
  &-dialog.modal-md,
  &-dialog.modal-lg {
    & .modal-header {
      padding: 1.5rem 2.5rem 1rem;
    }
    & .modal-body {
      padding: 1.5rem 2.5rem 1rem;
    }
    & .modal-footer {
      padding: 0 2.5rem 1.5rem;
    }
    & .hr_full {
      margin-left: -2.5rem;
      margin-right: -2.5rem;
    }
    & .modal-header + .modal-body {
      padding-top: 0;
    }
  }
  &__user-no {
    padding: 1rem 3rem;
  }
  &__input-list {
    // min-height: 360px;
    max-height: 50vh;
    // max-height: 560px;
    overflow-y: auto;
    overflow-x: hidden;
    &_no-height {
      min-height: auto;
    }
  }
}
