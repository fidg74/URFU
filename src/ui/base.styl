    background: #467BE3 !important;
  }
  & .asd__change-month-button--previous svg {
    visibility: hidden;
  }
  & .asd__change-month-button--next svg {
    visibility: hidden;
  }
  & .asd__change-month-button--previous button::after {
    content: "";
    border: solid rgb(102, 102, 102);
    border-width: 0 2px 2px 0;
    display: inline-block;
    padding: 3px;
    transform: rotate(135deg);
    -webkit-transform: rotate(135deg);
    border-color:#467BE3;
  }
  & .asd__change-month-button--next button::after {
    content: '';
    border: solid rgb(102, 102, 102);
    border-width: 0 2px 2px 0;
    display: inline-block;
    padding: 3px;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    border-color:#467BE3;
  }
  & .asd__change-month-button > button:hover,
  & .asd__change-month-button > button {
    border: none;
    outline: none;
  }
  & .asd__wrapper {
    border-radius: 10px;
    margin-top: 10px;
  }
}


