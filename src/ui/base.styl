  & .asd__change-month-button--previous {
    right: 50px;
    left: auto;
  }
  & .asd__month-name {
    position: absolute;
    top: 15px;
    left: 315px;
    font-size: 1rem;
    margin-top: -5px;
  }
  & .asd__days-legend {
    margin-top: -7px;
  }
