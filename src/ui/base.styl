  margin-bottom: 0.5rem;
}

.input-list {
  & .custom-checkbox,
  & .custom-radio {
    padding-left: 10px;
    padding-right: 10px;
    margin-bottom: 0;

    border-radius: 6px;
    cursor: pointer;
    &:hover {
      background: rgba(70, 123, 227, 0.08);
    }
    & .custom-control-label {
      display: block;
      border-bottom: 1px solid rgba(10, 10, 10, 0.1);
      padding-bottom: 18px;
      padding-top: 18px;
      padding-left: 22px;
      &::after,
      &::before {
        left: 0;
        top: 50%;
        transform: translateY(-50%);
      }
    }
    &:last-child {
      & .custom-control-label {
        border-bottom: none;
      }
    }
  }
}
.user-list {
  @extends .input-list;

  & .custom-radio,
  & .custom-checkbox {
    & .custom-control-label {
      &::after,
      &::before {
        // радио-кнопка/чекбокс на одном уровне (по-вертикали) с аватаром пользователя
        top: 33px;
        transform: none;
      }
    }
  }
  & .vue-recycle-scroller__item-view {
    & .custom-control .custom-control-label {
      border-bottom: 1px solid rgba(10, 10, 10, 0.1);
    }
    &:last-child .custom-control .custom-control-label {
      border: none;
    }
  }
}

