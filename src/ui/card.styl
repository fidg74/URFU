.card {
  border: none;
  border-radius: 6px;
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.12);
  word-wrap: normal;
  overflow-wrap: normal;
  &-header {
    font-size: 16px;
    line-height: 22px;
  }
  &_content {
    margin-top: 20px;
    &:first-child {
      margin-top: 0;
    }
  }
}

.card_content .card-body {
  padding: 24px 34px;
  & .alert:last-child,
  & .mb-2:last-child,
  & .mb-4:last-child {
      margin-bottom: 0 !important;
  }
}
